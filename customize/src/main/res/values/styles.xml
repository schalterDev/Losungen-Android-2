        <item name="colorPrimaryDark">#FFA000</item>
        <item name="colorPrimaryLight">#FFD54F</item>
        <item name="colorAccent">#7CB342</item>

        <item name="colorFont">#292929</item>
        <item name="colorFontDisabled">#9a292929</item>
        <item name="colorSecondFont">#c8292929</item>
    </style>

    <style name="AppTheme_Dark" parent="AppThemeDark.BaseDarkTheme">
        <item name="colorPrimary">#424242</item>
        <item name="colorPrimaryDark">#212121</item>
        <item name="colorPrimaryLight">#9E9E9E</item>
        <item name="colorAccent">#FF7043</item>

        <item name="colorFont">#EEEEEE</item>
        <item name="colorFontDisabled">#9AEEEEEE</item>
        <item name="colorSecondFont">#c8EEEEEE</item>


